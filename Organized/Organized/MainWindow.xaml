<Window x:Class="Organized.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Organized"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Window.Resources>
        <SolidColorBrush x:Key="backgroundBrush" Color="Black"/>
        <!-- Button Styling -->
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid ShowGridLines="True"
          Background="{StaticResource backgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="384.04"/>
        </Grid.RowDefinitions>

       <!--Nav Bar -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Organized" 
                    Width="70" 
                    Height="40"
                    Background="Transparent"
                    Foreground="Gold"
                    BorderBrush="Transparent"
                    Click="Logo_Click"
                    />
        </StackPanel>
        
        <!-- Left Side NavBar -->
        <StackPanel x:Name="CoursesNavPanel"
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="150"
                    Height="384.04"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
            

        </StackPanel>

    </Grid>
</Window>
